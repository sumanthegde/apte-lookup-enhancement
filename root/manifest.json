{
    "manifest_version": 3,
    "name": "Apte Dictionary Compound Search",
    "version": "1.0",
    "description": "Enables you to look up compound words in Apte's dictionary. Bonus feature: Autocomplete!",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.sanskrit-lexicon.uni-koeln.de/scans/AP90Scan/2020/web/webtc2/index.php"],
            "js": ["simpleTable.js","content.js"]
        }
    ],
    "action": {
        "default_icon": "icons/icon128.png"
    },
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "32": "icons/icon32.png",
        "16": "icons/icon16.png"
    }
}

